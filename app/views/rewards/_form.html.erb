<%= turbo_frame_tag reward do %>
  <%= bootstrap_form_with(model: reward, data: { action: "turbo:submit-end->modal#close" }) do |form| %>
    <%= form_with(model: reward) do |form| %>
      <% if @reward.errors.any? %>
        <div style="color: red">
        <ul>
          <% reward.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :completiondate, "終了日" %>
        <%= form.date_field :completiondate, value: reward.completiondate %>
      </div>
      <div class="mb-3">
      <%= form.label :location, "場所" %>
      <%= form.text_area :location %>
      </div>
      <div class="mb-3">
        <%= form.label :content, "内容" %>
        <%= form.text_area :content %>
      </div>
      <div class="mb-3">
        <%= form.submit "保存", class: "btn btn-primary" %>
      </div>
    <% end %>
  <% end %>
<% end %>
